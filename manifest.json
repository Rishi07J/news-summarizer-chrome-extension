{
  "manifest_version": 3,
  "name": "NewsSummarizer (Local TextRank)",
  "version": "1.0",
  "description": "Extract article text with Readability and summarize it using in-browser TextRank. Save summaries as local bookmarks.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "NewsSummarizer"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.js", "content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
